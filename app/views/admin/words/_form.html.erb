<%= form_with(model: [:admin, word], class: "space-y-4") do |form| %>
  <% if word.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h3 class="font-bold mb-2"><%= pluralize(word.errors.count, "помилка", "помилки", "помилок") %>:</h3>
      <ul class="list-disc list-inside">
        <% word.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :text, "Слово", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :text, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Наприклад: мама" %>
  </div>

  <div>
    <%= form.label :translation, "Переклад", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :translation, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Наприклад: mother" %>
  </div>

  <div>
    <%= form.label :position, "Позиція", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.number_field :position, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", min: 0 %>
  </div>

  <div>
    <%= form.label :audio, "Аудіо файл", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.file_field :audio, accept: "audio/*", class: "w-full px-4 py-2 border border-gray-300 rounded-lg" %>
    <% if word.audio.attached? %>
      <div class="mt-2 text-sm text-gray-600">
        Поточний файл: <%= word.audio.filename %>
        <audio controls class="mt-2 w-full max-w-md">
          <source src="<%= url_for(word.audio) %>" type="audio/mpeg">
        </audio>
      </div>
    <% end %>
  </div>

  <div class="flex space-x-4">
    <%= form.submit "Зберегти", class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-semibold transition-colors cursor-pointer" %>
    <%= link_to "Скасувати", :back, class: "bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg font-semibold transition-colors" %>
  </div>
<% end %>
