<% content_for :title, "New Lesson - Admin" %>

<div class="mb-6">
  <%= link_to admin_root_path, class: "text-blue-600 hover:text-blue-700 font-semibold" do %>
    ← Back to Dashboard
  <% end %>
</div>

<div class="bg-white rounded-lg shadow-lg p-8 max-w-4xl">
  <h1 class="text-3xl font-bold text-gray-800 mb-2">Create New Lesson</h1>
  <p class="text-gray-600 mb-6">
    Subject: <strong><%= @chapter.subject.name %></strong> →
    Chapter: <strong><%= @chapter.name %></strong>
  </p>

  <%= render "form", lesson: @lesson %>
</div>
