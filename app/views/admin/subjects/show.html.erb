<% content_for :title, "#{@subject.name} - Admin" %>

<div class="mb-6">
  <%= link_to admin_root_path, class: "text-blue-600 hover:text-blue-700 font-semibold" do %>
    ← Back to Dashboard
  <% end %>
</div>

<div class="bg-white rounded-lg shadow-lg p-8">
  <div class="flex justify-between items-start mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= @subject.name %></h1>
      <p class="text-gray-600">Manage chapters and lessons</p>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Edit Subject", edit_admin_subject_path(@subject), class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-semibold transition-colors" %>
      <%= button_to "Delete Subject", admin_subject_path(@subject), method: :delete, data: { confirm: "Are you sure? This will delete all chapters, lessons and words!" }, class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-semibold transition-colors" %>
    </div>
  </div>

  <!-- Chapters Section -->
  <div class="border-t border-gray-200 pt-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold text-gray-800">Chapters</h2>
      <%= link_to "➕ New Chapter", new_admin_subject_chapter_path(@subject), class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-semibold transition-colors" %>
    </div>

    <% if @subject.chapters.any? %>
      <div class="space-y-4">
        <% @subject.chapters.each do |chapter| %>
          <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
            <div class="flex justify-between items-start mb-3">
              <div class="flex-1">
                <div class="flex items-center space-x-3">
                  <%= link_to admin_chapter_path(chapter), class: "text-xl font-semibold text-gray-800 hover:text-blue-600 transition-colors" do %>
                    <%= chapter.name %>
                  <% end %>
                  <span class="text-sm text-gray-500">Position: <%= chapter.position %></span>
                </div>
                <p class="text-sm text-gray-600 mt-1"><%= pluralize(chapter.lessons.count, "урок", "уроки", "уроків") %></p>
              </div>
              <div class="flex space-x-2">
                <%= link_to "View", admin_chapter_path(chapter), class: "bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-sm transition-colors" %>
                <%= link_to "Edit", edit_admin_chapter_path(chapter), class: "bg-gray-600 hover:bg-gray-700 text-white px-3 py-1 rounded text-sm transition-colors" %>
                <%= button_to "Delete", admin_chapter_path(chapter), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm transition-colors" %>
              </div>
            </div>

            <!-- Quick Lessons Preview -->
            <% if chapter.lessons.any? %>
              <div class="mt-3 pt-3 border-t border-gray-300">
                <p class="text-xs text-gray-500 mb-2">Lessons:</p>
                <div class="flex flex-wrap gap-2">
                  <% chapter.lessons.first(10).each do |lesson| %>
                    <%= link_to lesson.name, admin_lesson_path(lesson), class: "text-xs bg-white px-2 py-1 rounded border border-gray-300 hover:bg-blue-50 hover:border-blue-400 transition-colors" %>
                  <% end %>
                  <% if chapter.lessons.count > 10 %>
                    <span class="text-xs text-gray-500 px-2 py-1">+<%= chapter.lessons.count - 10 %> more...</span>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8 bg-gray-50 rounded-lg border border-gray-200">
        <p class="text-gray-600 mb-4">No chapters yet</p>
        <%= link_to "Create First Chapter", new_admin_subject_chapter_path(@subject), class: "bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg font-semibold transition-colors inline-block" %>
      </div>
    <% end %>
  </div>
</div>
