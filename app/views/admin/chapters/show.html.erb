<% content_for :title, "#{@chapter.name} - Admin" %>

<div class="mb-6 flex items-center space-x-2 text-sm">
  <%= link_to "Dashboard", admin_root_path, class: "text-blue-600 hover:text-blue-700" %>
  <span class="text-gray-400">â†’</span>
  <%= link_to @chapter.subject.name, admin_subject_path(@chapter.subject), class: "text-blue-600 hover:text-blue-700" %>
  <span class="text-gray-400">â†’</span>
  <span class="text-gray-600"><%= @chapter.name %></span>
</div>

<div class="bg-white rounded-lg shadow-lg p-8">
  <div class="flex justify-between items-start mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= @chapter.name %></h1>
      <p class="text-gray-600">
        Subject: <strong><%= @chapter.subject.name %></strong> â€¢
        Position: <%= @chapter.position %>
      </p>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Edit Chapter", edit_admin_chapter_path(@chapter), class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-semibold transition-colors" %>
      <%= button_to "Delete Chapter", admin_chapter_path(@chapter), method: :delete, data: { confirm: "Are you sure? This will delete all lessons and words!" }, class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-semibold transition-colors" %>
    </div>
  </div>

  <!-- Lessons Section -->
  <div class="border-t border-gray-200 pt-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold text-gray-800">Lessons</h2>
      <%= link_to "âž• New Lesson", new_admin_chapter_lesson_path(@chapter), class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-semibold transition-colors" %>
    </div>

    <% if @chapter.lessons.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @chapter.lessons.each do |lesson| %>
          <div class="bg-gray-50 rounded-lg p-4 border border-gray-200 hover:border-blue-400 transition-colors">
            <div class="flex justify-between items-start mb-3">
              <div class="flex-1">
                <%= link_to admin_lesson_path(lesson), class: "text-lg font-semibold text-gray-800 hover:text-blue-600 transition-colors block" do %>
                  <%= lesson.name %>
                <% end %>
                <p class="text-xs text-gray-500 mt-1">Position: <%= lesson.position %></p>
              </div>
            </div>

            <div class="flex items-center space-x-2 text-xs text-gray-600 mb-3">
              <% if lesson.content.present? %>
                <span class="bg-green-100 text-green-700 px-2 py-1 rounded">âœ“ Content</span>
              <% end %>
              <% if lesson.audio.attached? %>
                <span class="bg-purple-100 text-purple-700 px-2 py-1 rounded">ðŸ”Š Audio</span>
              <% end %>
              <% if lesson.words.any? %>
                <span class="bg-blue-100 text-blue-700 px-2 py-1 rounded"><%= lesson.words.count %> words</span>
              <% end %>
            </div>

            <div class="flex space-x-2 mt-3 pt-3 border-t border-gray-300">
              <%= link_to "View", admin_lesson_path(lesson), class: "flex-1 bg-blue-500 hover:bg-blue-600 text-white px-3 py-2 rounded text-sm text-center transition-colors" %>
              <%= link_to "Edit", edit_admin_lesson_path(lesson), class: "flex-1 bg-gray-600 hover:bg-gray-700 text-white px-3 py-2 rounded text-sm text-center transition-colors" %>
              <%= button_to "Delete", admin_lesson_path(lesson), method: :delete, data: { confirm: "Are you sure?" }, class: "flex-1 bg-red-600 hover:bg-red-700 text-white px-3 py-2 rounded text-sm transition-colors" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8 bg-gray-50 rounded-lg border border-gray-200">
        <p class="text-gray-600 mb-4">No lessons yet</p>
        <%= link_to "Create First Lesson", new_admin_chapter_lesson_path(@chapter), class: "bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg font-semibold transition-colors inline-block" %>
      </div>
    <% end %>
  </div>
</div>
